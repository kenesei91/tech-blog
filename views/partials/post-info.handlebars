<article class="post">
  <div class="title">
    <a href="{{content}}" target="_blank">{{title}}</a>
  </div>
  <div class="meta">
    {{content}}
    was posted by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>